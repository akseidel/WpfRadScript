                                         KeyUp="Listbox_magick_results_KeyUp" 
                                         MouseRightButtonUp="Listbox_magick_results_MouseRightButtonUp"/>
                                    <Border Background="GhostWhite"
                                            Grid.Row="3" Grid.Column="9" Grid.ColumnSpan="3" 
                                            BorderBrush="Gainsboro"
