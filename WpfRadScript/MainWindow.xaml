                                            Content="Check None" Margin="2,0" 
                                            Focusable="False" Click="Buttiffsource_selectnone_Click" Padding="4,1"/>
                                    <CheckBox x:Name="chkbox_magicpause" Content="Observe Process"
                                                        Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="2"
                                                        HorizontalContentAlignment="Center" 
                                                        VerticalContentAlignment="Center"
                                                        VerticalAlignment="Center" 
                                                        HorizontalAlignment="Center" Focusable="False"/>
                                    <Button x:Name="but_rename_magicresult"
                                            Grid.Row="2" Grid.Column="7"
                                            Content="Rename" Margin="2,0" 
                                            Focusable="False" Click="But_rename_magicresult_Click"/>
                                    <Button x:Name="but_explorer_magicresult"
