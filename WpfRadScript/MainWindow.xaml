                                                 Margin="6,0" TextChanged="TextBox_ForFileName_TextChanged"/>

                                    </GroupBox>
                                    <GroupBox Header="Editor Path">

                                        <TextBox x:Name="tb_editorspath" 
                                                     Text="{Binding EditorPath,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
                                                     MinWidth="300" 
                                                     Margin="6,0" MouseDoubleClick="Tb_editorspath_MouseDoubleClick" TextChanged="TextBox_ForFileName_TextChanged"/>

                                    </GroupBox>
                                    <GroupBox Header="Preferences Path">

                                        <TextBox x:Name="tb_prefspath" 
                                                     Text="{Binding PrefsPath,
                                                     Mode=TwoWay,
                                                     UpdateSourceTrigger=PropertyChanged}"
