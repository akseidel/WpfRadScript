<Window x:Name="Wnd_RadScript" x:Class="WpfRadScript.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="RadScript"
        Width="1600"
        MinWidth="980"
        MaxWidth="2000"
        MaxHeight="900"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        BorderThickness="0"
        MouseDown="DragWindow"
        Closing="Window_Closing"
        FontSize="14" 
        Loaded="Window_Loaded"
        Activated="Window_Activated"
        >

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="{x:Type ToolTip}"
             TargetType="{x:Type ToolTip}">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0"/>
        </Style>
        <BitmapImage x:Key="ReloadImage" UriSource="reload-icon.png" />
        <ContextMenu x:Key="cmMagickResultsListImageItem" StaysOpen="True">
            <MenuItem Header="Rename" Click="MagickResultsMenuItemRename_Click"  />
            <MenuItem Header="Delete" Click="MagickResultsMenuItemDelete_Click" />
        </ContextMenu>
        <ContextMenu x:Key="cmRaTiffResultsListImageItem" StaysOpen="True">
        <MenuItem Header="Rename" Click="RaTiffResultsMenuItemRename_Click"  />
        <MenuItem Header="Delete" Click="RaTiffResultsMenuItemDelete_Click" />
        </ContextMenu>
        <BitmapImage x:Key="Grears1Image" UriSource="3-gears-hi-s.png" />
    </Window.Resources>

    <Border x:Name ="Body" 
            Background="AliceBlue"
            CornerRadius="24"
            BorderThickness="3"
            BorderBrush="DarkGray" 
            >
        <StackPanel Orientation="Vertical" Margin="10">
            <DockPanel  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Height="Auto" >
                <Border CornerRadius="8" BorderThickness="1" BorderBrush="DarkGray" Padding="8" MinWidth="430">
                    <TextBlock x:Name="statMsg" DockPanel.Dock="Left" TextWrapping="Wrap" 
                               Text="{Binding StatusMsg, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"></TextBlock>
                </Border>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,10,0,10" >
                    <StackPanel Orientation="Vertical">
                        <Image x:Name="bt_regen"  Width="40" Height="40" Source ="{StaticResource ReloadImage}"  MouseUp="Bt_regen_MouseUp" Margin="0,0,20,0"  />
                    </StackPanel>
                    <Button Content="Write BatchFile" x:Name="bt_WriteBatchFile" Padding="4"  Margin="4,0" Click="WriteBatchFile_Click" Height="30"/>
                    <Button Content="Append To BatchFile" x:Name="AppendBatchFile" Padding="4"  Margin="4,0" Click="AppendBatchFile_Click" Height="30"></Button>
                    <Button Content="Explorer" x:Name="Explorer" Padding="4" Margin="4,0" MinWidth="80" Click="Explorer_Click" Height="30"></Button>
                    <Button Content="Quit" x:Name="Quit" Padding="4" Margin="4,0,10,0" Click="Button_Click" MinWidth="80" Height="30"></Button>
                </StackPanel>
            </DockPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" Margin="6">
                <Grid >
                    <TabControl x:Name="MainTabControl" UseLayoutRounding="False" BorderThickness="0" FontSize="14" SelectionChanged="MainTabControl_SelectionChanged" >

                        <TabItem x:Name="tabitem_General" Header="General" IsSelected="True">
                            <StackPanel Orientation="Vertical" >
                                <GroupBox Header="Radiance" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80*"/>
                                            <ColumnDefinition Width="100*"/>
                                            <ColumnDefinition Width="180*" />
                                            <ColumnDefinition Width="220" />
                                            <ColumnDefinition Width="115*"  />
                                            <ColumnDefinition Width="116*"/>
                                            <ColumnDefinition Width="115*"/>
                                        </Grid.ColumnDefinitions>

                                        <Label x:Name="lb_projectpath"  Grid.Row="0" Grid.Column="1" 
                                               Content="Project:" HorizontalContentAlignment="Right" Foreground="Black" VerticalContentAlignment="Center"/>
                                        <TextBox x:Name="tboxProjectPath" Grid.Row="0"  Grid.Column="2" Grid.ColumnSpan="3"
                                                 VerticalContentAlignment="Center" VerticalAlignment="Center"
                                                 Text="{Binding ProjectPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 MouseDoubleClick="TboxProjectPath_MouseDoubleClick"  
                                                 LostFocus="FolderTboxEndsInBackSlash" 
                                                 TextChanged="TboxProjectPath_TextChanged" Margin="0">
                                        </TextBox>
                                        <Button x:Name="MakeRadPaths"   Grid.Row="0" Grid.Column="5" 
                                                Content="Make Rad Paths" Margin="10,2,0,2" Click="MakeRadPaths_Click" Padding="4" Height="30" />
                                        <Label x:Name="lb_radiance" Content="?radiance"
                                               Grid.Row="0" Grid.Column="0"
                                               Margin="0,2,0,0" FontWeight="Bold" MouseDoubleClick="Lb_radiance_MouseDoubleClick" />
                                        <Label x:Name="lb_batchfile"
                                               Grid.Row="1" Grid.Column="1"
                                               Content="Batchfile:" HorizontalContentAlignment="Right"
                                               HorizontalAlignment="Right" VerticalContentAlignment="Center" Margin="0"/>
                                        <TextBox Grid.Row="1" Grid.Column="2" x:Name="tboxBatchFileName" Text ="{Binding Path=BatchFileName, Mode=TwoWay}" VerticalContentAlignment="Center" VerticalAlignment="Center" Padding="4,0" TextChanged="TboxBatchFileName_TextChanged" >

                                        </TextBox>
                                        <TextBox Grid.Row="1" Grid.Column="3" x:Name="tboxRadInstallPath" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,0" Text="{Binding RadPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MouseDoubleClick="TboxRadInstallPath_MouseDoubleClick" TextChanged="TboxRadInstallPath_TextChanged" Padding="4,0" LostFocus="FolderTboxEndsInBackSlash" />
                                        <CheckBox Grid.Row="1" Grid.Column="4" Content="Set Rad. Env." VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="6,0,0,0" IsChecked="{Binding SetRadEnv, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        <Button x:Name="btn_ShellBatch" Grid.Row="1" Grid.Column="5" Content="Shell BatchFile" Margin="10,2,0,0" Padding="4" Click="Button_ShellBatch_Click" Height="30"/>
                                        <Button x:Name="but_viewradbatch" Grid.Row="1" Grid.Column="6" Content="View BatchFile" Margin="5,2,0,0" Padding="4" Click="Button_Click_1" Height="30" />
                                    </Grid>

                                </GroupBox>

                                <Expander Header="Sky and Time Batching" >
                                    <GroupBox  >
                                        <DockPanel
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch" 
                                        Height="Auto" 
                                        >
                                            <GroupBox Header="Settings" Margin="4" DockPanel.Dock="Left">
                                                <Grid Margin="0,6,0,0" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="2*" MinWidth="80" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="2*" MinWidth="80" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                    </Grid.RowDefinitions>

                                                    <Label x:Name="lb_skypath" Content="Skyfile Path:" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="1" x:Name="tboxskyfilepath" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding SkyFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  KeyUp="Tboxskyfilepath_KeyUp" MouseDoubleClick="Tboxskyfilepath_MouseDoubleClick" TextChanged="Tboxskyfilepath_TextChanged" Padding="4,0" LostFocus="FolderTboxEndsInBackSlash"/>
                                                    <Label x:Name="lb_illumpath" Grid.Column="2" Content="Illum Path:" Margin="10,0,0,0" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="3" x:Name="tboxillumpath" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding IllumPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  KeyUp="Tboxillumpath_KeyUp" MouseDoubleClick="Tboxillumpath_MouseDoubleClick" TextChanged="Tboxillumpath_TextChanged" Padding="4,0" LostFocus="FolderTboxEndsInBackSlash"/>
                                                    <Label x:Name="lb_skyfile" Grid.Row="1" Content="Skyfile:" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="1" Grid.Row="1" x:Name="tboxskyfile" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding SkyFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyUp="Tboxskyfile_KeyUp" TextChanged="Tboxskyfile_TextChanged" Padding="4,0"/>
                                                    <Label x:Name="lb_illumfile" Grid.Row="1" Grid.Column="2" Content="Illumfile:" Margin="10,0,0,0" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Right"/>
                                                    <TextBox  Grid.Row="1" Grid.Column="3" x:Name="tboxillumfile" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding IllumFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  KeyUp="Tboxillumfile_KeyUp" TextChanged="Tboxillumfile_TextChanged" Padding="4,0"/>
                                                    <Label Grid.Row="2" Content="Sky Switch:" HorizontalContentAlignment="Right"/>
                                                    <TextBox  Grid.Row="2" Grid.Column="1" x:Name="tboxskyswitch" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding SkySwitch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyUp="Tboxskyswitch_KeyUp"/>
                                                </Grid>
                                            </GroupBox>
                                            <GroupBox Header="Hour Of Day  #Passes/Day" DockPanel.Dock="Left" Margin="4" MaxWidth="300">
                                                <Grid Margin="0,6,0,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition MinWidth="30"/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition MinWidth="30"/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition MinWidth="40"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label x:Name="lb_startHr" Content="Start:" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="1" x:Name="tbox_startH" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding SHour, Mode=TwoWay}" KeyUp="Tbox_startH_KeyUp"/>
                                                    <Label x:Name="lb_endH" Grid.Column="2" Content="End:" Margin="4,0,0,0" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="3" x:Name="tbox_endH" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding EHour, Mode=TwoWay}" KeyUp="Tbox_endH_KeyUp"/>
                                                    <Label x:Name="lb_intervalH" Grid.Column="4" Content="Interval:" Margin="4,0,0,0" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="5" x:Name="tbox_intervalH" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding HrInc, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" KeyUp="Tbox_intervalH_KeyUp"/>
                                                    <CheckBox x:Name="chk_NightTime" Grid.Row="1" Content="Night Time" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="6,0,0,0" Grid.ColumnSpan="3" IsChecked="{Binding NightTime, Mode=TwoWay}" Click="CheckBox_NightTime_Click"/>
                                                    <ScrollBar Grid.Row="1" Grid.Column="5" x:Name="scrollHr" Orientation="Horizontal" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="20" SmallChange="{Binding HrInc, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" Scroll="ScrollHr_Scroll" Maximum="{Binding EHour, Mode=TwoWay}" Minimum="{Binding SHour, Mode=TwoWay}"/>
                                                </Grid>
                                            </GroupBox>
                                            <GroupBox Header="Simulation Months # Month Passes" DockPanel.Dock="Left" Margin="4" HorizontalAlignment="Left" MaxWidth="300">
                                                <Grid Margin="0,6,0,0"  >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition MinWidth="30"/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition MinWidth="30"/>
                                                        <ColumnDefinition/>
                                                        <ColumnDefinition MinWidth="40"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label x:Name="lb_startM" Content="Start:" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="1" x:Name="tbox_startM" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding MStart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyUp="Tbox_startM_KeyUp"/>
                                                    <Label x:Name="lb_endM" Grid.Column="2" Content="End:" Margin="4,0,0,0" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="3" x:Name="tbox_endM" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding MEnd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyUp="Tbox_endM_KeyUp"/>
                                                    <Label x:Name="lb_intervalM" Grid.Column="4" Content="Interval:" Margin="4,0,0,0" HorizontalContentAlignment="Right"/>
                                                    <TextBox Grid.Column="5" x:Name="tbox_intervalM" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding MInc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                                    <Label x:Name="lb_simdayM" Grid.Row="1" Content="Simulation Day:" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0" Grid.ColumnSpan="3" HorizontalContentAlignment="Right"/>
                                                    <TextBox  Grid.Row="1" Grid.Column="3" x:Name="tbox_simdayM" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" Text="{Binding SimDay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" KeyUp="Tbox_simdayM_KeyUp"/>
                                                    <ScrollBar Grid.Row="1" Grid.Column="5" x:Name="scrollMnth" Orientation="Horizontal" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Height="20" SmallChange="{Binding MInc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Scroll="ScrollMnth_Scroll" Maximum="{Binding MEnd, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}" Minimum="{Binding MStart, Mode=TwoWay, NotifyOnTargetUpdated=True, NotifyOnSourceUpdated=True}"/>
                                                </Grid>
                                            </GroupBox>
                                        </DockPanel>
                                    </GroupBox>
                                </Expander>

                                <GroupBox Header="Command Lines Preview (Each time interval simulation has a set of these associated with the time interval.)">
                                    <StackPanel Orientation="Vertical">

                                        <Label x:Name="lb_gensky" Content="?gensky" Margin="0,2,0,0" FontWeight="Bold" MouseDoubleClick="Label_MouseDoubleClick" />

                                        <TextBox x:Name="tbox_gensky" TextWrapping="Wrap"  MaxHeight="40" VerticalScrollBarVisibility="Auto" Padding="4,0">
                                            gensky content here gensky content
                                        </TextBox>

                                        <Label x:Name="lb_oconv" Content="?oconv" Margin="0,2,0,0" FontWeight="Bold" MouseDoubleClick="Lb_oconv_MouseDoubleClick"/>
                                        <TextBox x:Name="tbox_oconv" TextWrapping="Wrap"  MaxHeight="60" VerticalScrollBarVisibility="Auto" Padding="4,0">
                                            oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here oconv content here
                                        </TextBox>
                                        <Label x:Name="lb_mkillum" Content="?mkillum" FontWeight="Bold" Margin="0,2,0,0" MouseDoubleClick="Lb_mkillum_MouseDoubleClick"/>
                                        <TextBox x:Name="tbox_mkillum" TextWrapping="Wrap"  MaxHeight="60" VerticalScrollBarVisibility="Auto" Padding="4,0">
                                            mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here mkillum content here
                                        </TextBox>

                                        <Label x:Name="lb_ocon2" Content="?oconv 2nd pass" FontWeight="Bold" Margin="0,2,0,0" MouseDoubleClick="Lb_ocon2_MouseDoubleClick"/>
                                        <TextBox x:Name="tbox_oconv2nd" TextWrapping="Wrap"  MaxHeight="60" VerticalScrollBarVisibility="Auto" Padding="4,0">
                                            oconv content here oconv content here  oconv content here oconv content here oconv content here oconv content here  oconv content here oconv content here
                                        </TextBox>
                                        <Label x:Name="lb_rpict" Content="?rpict" FontWeight="Bold" Margin="0,2,0,0" MouseDoubleClick="Lb_rpict_MouseDoubleClick"/>
                                        <TextBox x:Name="tbox_rpict" TextWrapping="Wrap" MaxHeight="80" VerticalScrollBarVisibility="Auto" Padding="4,0">
                                            rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here rpict content here
                                        </TextBox>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center"  >
                                            <Label x:Name="lb_rpicti" Content="?rpict -i" VerticalContentAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,0" FontWeight="Bold" MouseDoubleClick="Lb_rpicti_MouseDoubleClick"/>
                                            <CheckBox Content="include rpict -i" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="10,8,0,0" IsChecked="{Binding IncRpictI, Mode=TwoWay}" Click="CheckBox_Click_1" />
                                        </StackPanel>
                                        <TextBox x:Name="tbox_rpicti" TextWrapping="Wrap"  MaxHeight="80" VerticalScrollBarVisibility="Auto" Padding="4,0">
                                            rpict -i content here  rpict -i content here rpict -i content here  rpict -i content here rpict -i content here  rpict -i content here rpict -i content here  rpict -i content here rpict -i content here  rpict -i content here rpict -i content here  rpict -i content here rpict -i content here  rpict -i content here rpict -i content here  rpict -i content here
                                        </TextBox>

                                    </StackPanel>

                                </GroupBox>
                            </StackPanel>
                        </TabItem>

                        <TabItem x:Name="tabitem_Scenes" Header="Scenes">
                            <StackPanel Orientation="Vertical">
                                <GroupBox Header="Scene Argument">
                                    <TextBox x:Name="scene_arg" TextWrapping="Wrap" BorderThickness="0" Background="#FFE3E9EF" Margin="0,4,0,0" MaxWidth="940" MinHeight="60" MaxHeight="60" VerticalScrollBarVisibility="Auto" >

                                    </TextBox>
                                </GroupBox>
                                <GroupBox Header="Base Scene">
                                    <DockPanel
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch" 
                                        Height="Auto" 
                                        >

                                        <ListBox x:Name="listboxSSS" DockPanel.Dock="Left"  MinWidth="200" MinHeight="100" MaxHeight="200" Margin="0,6">
                                            <CheckBox Content="This Item"/>

                                        </ListBox>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <ListBox x:Name="listboxBaseSceneChoices"   MinWidth="250" MinHeight="100" MaxHeight="200" Margin="0,4" VerticalContentAlignment="Stretch" HorizontalAlignment="Left">
                                                <CheckBox Content="This Item__A"/>

                                            </ListBox>
                                            <StackPanel Orientation="Vertical" Margin="0,4" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Button x:Name="but_basescene_useall" Content="Use All" Margin="10,5" Padding="4" Click="But_basescene_useall_Click" Height="30"/>
                                                <Button x:Name="but_basescene_clear" Content="Clear" Margin="10,5" Padding="4" Click="But_basescene_clear_Click" Height="30"/>
                                                <Button x:Name="but_basescene_up" Content="Move /\" Margin="10,5" Padding="4" Click="But_basescene_up_Click" Height="30"/>
                                                <Button x:Name="but_basescene_dwn" Content="Move \/" Margin="10,5" Padding="4" Click="But_basescene_dwn_Click" Height="30"/>

                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch"  Margin="0,4" MinHeight="200" MaxHeight="200">
                                                <ListBox x:Name="listboxBaseSceneToArg"  Width="250" MinHeight="162"  MaxHeight="162" Margin="0" SelectionChanged="ListboxScenes_SelectionChanged"/>
                                                <DockPanel Margin="0,4,0,0" >
                                                    <Button DockPanel.Dock="Left"   x:Name="but_save_sss" Content="Save SSS"  Padding="4" Click="But_save_sss_Click"   VerticalContentAlignment="Center" Height="30"/>
                                                    <TextBox x:Name="txb_sss_name" Width="170" VerticalAlignment="Center" HorizontalAlignment="right" VerticalContentAlignment="Center"></TextBox>
                                                </DockPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </DockPanel>
                                </GroupBox>
                                <Expander Header="Base Scene Path" IsExpanded="False">
                                    <GroupBox >
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="tbox_basescenepath" MinWidth="300" Text="{Binding BScnPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MouseDoubleClick="Tbox_basescenepath_MouseDoubleClick" Padding="4,0" TextChanged="Tbox_basescenepath_TextChanged" LostFocus="FolderTboxEndsInBackSlash" VerticalAlignment="Center" />
                                            <Button x:Name="ExplBSP" Content="Explorer" Padding="10,0,10,0" Margin="10,2,0,2" Click="ExplBSP_Click" Height="30" />
                                        </StackPanel>
                                    </GroupBox>
                                </Expander>

                                <GroupBox x:Name="groupBoxSceneFile" Header="Scene File View">
                                    <TextBox x:Name="tbox_scenefileview" TextWrapping="Wrap" MaxHeight="100" VerticalScrollBarVisibility="Auto" IsReadOnly="True" MouseDoubleClick="Tbox_scenefileview_MouseDoubleClick">

                                    </TextBox>
                                </GroupBox>

                                <Expander Header="Variable Scene" IsExpanded="False" >
                                    <GroupBox >
                                        <DockPanel
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch" 
                                        Height="Auto" 
                                        >
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <ListBox x:Name="listboxVarSceneChoices"   MinWidth="250" MinHeight="100" MaxHeight="200" Margin="0,8" >

                                                </ListBox>
                                                <StackPanel Orientation="Vertical" Margin="0,8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Button x:Name="but_varscene_useall" Content="Use All" Margin="10,5" Padding="4" Click="But_varscene_useall_Click" Height="30"/>
                                                    <Button x:Name="but_varscene_clear" Content="Clear" Margin="10,5" Padding="4" Click="But_varscene_clear_Click" Height="30"/>
                                                </StackPanel>
                                                <ListBox x:Name="listboxSelVarSceneToArg"  Width="250" MinHeight="100" MaxHeight="200" Margin="0,8">

                                                </ListBox>
                                            </StackPanel>
                                        </DockPanel>
                                    </GroupBox>
                                </Expander>
                                <Expander Header="Variable Scene Path" IsExpanded="False" >
                                    <GroupBox >
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="tbox_varscenepath" MinWidth="300" Text="{Binding VScnPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MouseDoubleClick="Tbox_varscenepath_MouseDoubleClick" Padding="4,0" TextChanged="Tbox_varscenepath_TextChanged" LostFocus="FolderTboxEndsInBackSlash" VerticalAlignment="Center"/>
                                            <Button x:Name="ExplVSP" Content="Explorer"  Padding="10,0,10,0" Margin="10,2,0,2" Click="ExplVSP_Click" Height="30" />
                                        </StackPanel>
                                    </GroupBox>
                                </Expander>
                            </StackPanel>
                        </TabItem>

                        <TabItem x:Name="tabitem_Materials" Header="Materials">
                            <StackPanel Orientation="Vertical">
                                <GroupBox Header="Materials">
                                    <DockPanel
                                        HorizontalAlignment="Stretch" 
                                        VerticalAlignment="Stretch" 
                                        Height="Auto" 
                                        >
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,10,0" >
                                            <ListBox x:Name="listbox_mat_choices"   MinWidth="250" MinHeight="80" MaxHeight="300" Margin="0,8"  >
                                                <CheckBox Content="This Mat Item A" />
                                            </ListBox>
                                            <StackPanel Orientation="Vertical" Margin="0,8" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <Button x:Name="but_mat_useall" Content="Use All" Margin="10,5" Padding="4" Click="But_mat_useall_Click" Height="30"/>
                                                <Button x:Name="but_mat_clear" Content="Clear" Margin="10,5" Padding="4" Click="But_mat_clear_Click" Height="30"/>
                                            </StackPanel>
                                            <ListBox x:Name="listbox_mat_sel"  Width="250" MinHeight="80" MaxHeight="300" Margin="0,8" SelectionChanged="Listbox_mat_sel_SelectionChanged">

                                            </ListBox>
                                        </StackPanel>
                                        <GroupBox Header="Materials Argument" >
                                            <TextBox x:Name="mat_arg" TextWrapping="Wrap"  BorderThickness="0" Background="#FFE3E9EF" Margin="0,6,0,0" MaxWidth="400" MaxHeight="300" VerticalScrollBarVisibility="Visible" >

                                            </TextBox>
                                        </GroupBox>
                                    </DockPanel>

                                </GroupBox>
                                <Expander Header="Materials Path" IsExpanded="False">
                                    <GroupBox >
                                        <StackPanel Orientation="Horizontal">
