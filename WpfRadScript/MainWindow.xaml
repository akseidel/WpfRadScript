                                                 Mode=TwoWay,
                                                 UpdateSourceTrigger=PropertyChanged}"
                                                 MinWidth="300" 
                                                 Margin="6,0" Padding="1" VerticalAlignment="Center"
                                                 Focusable="False"
                                                 AllowDrop="False"
                                                 IsHitTestVisible="False"
                                                 IsTabStop="False"/>

