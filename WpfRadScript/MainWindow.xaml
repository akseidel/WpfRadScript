                                            <Label x:Name="Lb_ratiff_arg_b" Content="[ -b ]"/>
                                            <Label x:Name="Lb_ratiff_arg_e" Content="[ -e +/-stops ]"/>
                                            <Label x:Name="Lb_ratiff_arg_g" Content="[ -g gamma ]"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <TextBox x:Name="tbox_picsourcefolder" 
                                         Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                                         Text="{Binding PcombimagesourcePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         MouseDoubleClick="Tbox_picsourcefolder_MouseDoubleClick" 
                                         Padding="6,0" Margin="0,6" TextChanged="Tbox_picsourcefolder_TextChanged" 
                                         LostFocus="FolderTboxEndsInBackSlash"/>
                                    <TextBox x:Name="tbox_tiffresultsfolder" 
                                         Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" 
                                         Text="{Binding RatiffimagePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="4,6" Padding="6,0" MouseDoubleClick="Tbox_tiffresultsfolder_MouseDoubleClick" 
                                         TextChanged="Tbox_tiffresultsfolder_TextChanged" 
                                         LostFocus="FolderTboxEndsInBackSlash" />
                                    <Button x:Name="but_picsource_selectall"
                                            Grid.Row="2" Grid.Column="0"
                                            Content="Check All" Margin="2,0" Click="But_picsource_selectall_Click"
                                            Focusable="False"/>
                                    <Button x:Name="but_picsource_selectnone"
                                            Grid.Row="2" Grid.Column="1"
                                            Content="Check None" Margin="2,0" Click="But_picsource_selectnone_Click"
                                            Focusable="False"/>

                                    <CheckBox x:Name="chkbox_tiffpause" Content="Observe ra__tiff Process"
                                                        IsChecked="{Binding Ratiffpause}"
                                                        Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"
                                                        HorizontalContentAlignment="Center" 
                                                        VerticalContentAlignment="Center"
                                                        VerticalAlignment="Center" 
                                                        HorizontalAlignment="Center" Focusable="False"/>
                                    <Button x:Name="But_rename_pictotiffresult"
                                            Grid.Row="2" Grid.Column="4"
                                            Content="Rename" Margin="2,0" 
                                            Focusable="False" Click="But_rename_pictotiffresult_Click" />
                                    <Button x:Name="but_explorer_result"
                                            Grid.Row="2" Grid.Column="5"
                                            Content="Explorer" Margin="2,0" 
                                            Focusable="False" Click="But_explorer_result_Click"/>
                                    <ListBox x:Name="listbox_pic_choices" 
                                         Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"
                                          Height="410" Margin="0,5,0,0"
                                         VerticalAlignment="Top" >
                                        <CheckBox Content="pic item"/>
                                    </ListBox>
                                    <ListBox x:Name="listbox_tiff_results"
                                         Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3"
                                          Height="410" Margin="4,5,4,0" 
                                         SelectionChanged="Listbox_tiff_results_SelectionChanged"
                                         MouseUp="Listbox_tiff_results_MouseUp" VerticalAlignment="Top" KeyUp="Listbox_tiff_results_KeyUp" SelectionMode="Extended" MouseRightButtonUp="Listbox_tiff_results_MouseRightButtonUp"/>

                                    <Border Background="GhostWhite" 
                                            BorderBrush="Gainsboro"
                                            Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="3" 
                                            BorderThickness="1" CornerRadius="6">
                                        <StackPanel Orientation="Vertical" 
                                                Width="380"
                                                Height="410"
                                                Margin="0,5,0,0">
                                            <Image x:Name="img_tiffconversion"
                                                MaxHeight="380" Margin="4,0"/>
                                            <Label x:Name="lbl_tiffname"
                                               HorizontalAlignment="Center"
                                               VerticalContentAlignment="Bottom"
                                               VerticalAlignment="Center"
                                               HorizontalContentAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                </Grid>
                            </GroupBox>
                        </TabItem>

                        <TabItem x:Name="Tabitem_tifftoother" Header="Tiff to Other">
                            <GroupBox x:Name="grpbox_tifftootehr" Header="Tiff Conversion To Other">
                                <Grid Margin="4,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition/>
                                        <ColumnDefinition />
                                        <ColumnDefinition  />
                                        <ColumnDefinition/>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition/>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="2*" />
