                        <TabItem x:Name="tabitem_Utilities" Header="Utilities">
                            <StackPanel Orientation="Vertical">
                                <Button x:Name="Button_UtilityEditor" Content="Replace String Utility" Padding="4" Margin="4,10" Height="30" Focusable="False" Click="Button_UtilityEditorClick"></Button>
