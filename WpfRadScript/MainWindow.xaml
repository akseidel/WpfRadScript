                                    <StackPanel Orientation="Horizontal"
                                                Grid.Row="0" Grid.Column="2" 
                                                Grid.ColumnSpan="7" 
                                                HorizontalAlignment="Left">
                                        <Label Content="Image Type:" Padding="10,5,2,5"/>
