                                         Padding="6,0" Margin="0,6" 
                                         LostFocus="FolderTboxEndsInBackSlash" MouseDoubleClick="Tbox_tiffsourcefolder_MouseDoubleClick" TextChanged="Tbox_tiffsourcefolder_TextChanged"
                                         />
                                    <TextBox x:Name="tbox_conversionresultsfolder" 
