                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <GroupBox Grid.Row="0" Grid.Column="0" Header="Where the directories will be made" Grid.ColumnSpan="3" Margin="0,0,0,4" >
